<persistence
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://xmlns.jcp.org/xml/ns/persistence"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
        version="2.1">
    <persistence-unit
            name="SECURITY_PU"
            transaction-type="RESOURCE_LOCAL">
        <description>
            The tenant data of the system.
        </description>

        <non-jta-data-source>java:comp/env/jdbc/security</non-jta-data-source>

        <class>de.kaiserpfalzedv.paladinsinn.commons.jpa.MetaData</class>
        <class>de.kaiserpfalzedv.paladinsinn.commons.jpa.NamedMetaData</class>
        <class>de.kaiserpfalzedv.paladinsinn.commons.jpa.TenantMetaData</class>
        <class>de.kaiserpfalzedv.paladinsinn.commons.jpa.NamedTenantMetaData</class>
        <class>de.kaiserpfalzedv.paladinsinn.security.store.jpa.model.EntitlementJPA</class>
        <class>de.kaiserpfalzedv.paladinsinn.security.store.jpa.model.RoleJPA</class>
        <class>de.kaiserpfalzedv.paladinsinn.security.store.jpa.model.UserJPA</class>
        <class>de.kaiserpfalzedv.paladinsinn.security.store.jpa.model.PersonaJPA</class>
        <class>de.kaiserpfalzedv.paladinsinn.security.store.jpa.model.EmailJPA</class>
        <class>de.kaiserpfalzedv.paladinsinn.security.store.jpa.model.NameJPA</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <shared-cache-mode>ALL</shared-cache-mode>
        <validation-mode>AUTO</validation-mode>

        <properties>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <!-- Configuring Connection Pool -->
            <property name="hibernate.c3p0.min_size" value="3"/>
            <property name="hibernate.c3p0.max_size" value="20"/>
            <property name="hibernate.c3p0.timeout" value="500"/>
            <property name="hibernate.c3p0.max_statements" value="50"/>
            <property name="hibernate.c3p0.idle_test_period" value="2000"/>
        </properties>
    </persistence-unit>
</persistence>